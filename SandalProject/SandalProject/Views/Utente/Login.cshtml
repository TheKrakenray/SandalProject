    <div class="login-page">
        <div class="login-header">
            <a href="/Home/Index">🡨</a>
            <h2>Accedi al tuo profilo</h2>
        </div>
        <div class="login-content">
            <form action="/Utente/Valida" method="post" onsubmit="">
                <input type="email" name="mail" placeholder="Indirizzo e-mail*" required>
                <div class="password-container">
                    <input type="password" name="psw" id="password" placeholder="Password*" required autocomplete="new-password">
                    <i class="far fa-eye toggle-password" id="togglePassword"></i>
                </div>
                <div class="required-forgot-container">
                    <p class="required-fields">*Campi obbligatori</p>
                    <a href="/Utente/RecuperaPassword" class="forgot-password">Password dimenticata?</a>
                </div>
                <button type="submit" class="login-button">Accedi al tuo profilo</button>
            </form>
            <p>Non sei ancora iscritto?</p>
            <div class="signup-button"><a href="/Utente/Registrazione">Iscriviti ora</a></div>
        </div>
    </div>
