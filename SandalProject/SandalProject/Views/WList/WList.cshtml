@using SandalProject.Models;
@model List<Sandali>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist</title>
    <link rel="stylesheet" href="~/css/WList.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="top-section">
            <h1>Wishlist</h1>
            <p>2 Articoli</p>
            <hr>
        </div>
        <div class="wishlist">
            <div class="wishlist-items">

                <div class="wishlist-item">
                    <img src="product1.jpg" alt="Product 1">
                    <div class="wishlist-item-details">
                        <h4>Nome prodotto</h4>
                        <p>Taglia: M</p>
                        <p>€125.95</p>
                        <div class="wishlist-item-actions">
                            <button href="/Carrello/AggiungiCarrello/id" class="add-to-cart">Aggiungi al carrello</button>
                            <button class="remove-item">Rimuovi</button>
                        </div>
                    </div>
                </div>

                <!-- Aggiungi altri articoli della wishlist qui -->
            </div>
            <button class="clear-wishlist" id="clear-wishlist">Svuota Wishlist</button>
        </div>
    </div>

    <script src="~/js/Account/WList.js"></script>
</body>
</html>