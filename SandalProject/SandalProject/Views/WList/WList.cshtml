@using SandalProject.Models;
@model List<Sandali>
@{
    Layout = "MainLayout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist</title>
    <link rel="stylesheet" href="~/css/WList.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="top-section">
            <h1>Wishlist</h1>
            <p>@Model.Count() Articoli</p>
            <hr>
        </div>
        <div class="wishlist">
            @if(Model.Count() > 0)
            {
                <div class="wishlist-items">
                    @foreach (Sandali s in Model)
                    {
                        <div class="wishlist-item">
                            <a href="/Dettagli/Dettagli?id=@s.Id"><img src="/Dettagli/GetImage?id=@s.Id&posizioneLista=0" alt="Product 1"></a>
                            <div class="wishlist-item-details">
                                <h4>@s.Nome</h4>
                                <p>Taglia: @s.Taglia</p>
                                <p>€@s.Prezzo</p>
                                <div class="wishlist-item-actions">
                                    <button onclick="window.location.href='/Carrello/InserisciCarrello?id=@s.Id'" class="add-to-cart">Aggiungi al carrello</button>
                                    <button onclick="window.location.href='/WList/EliminaWList?id=@s.Id'" class="remove-item">Rimuovi</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <button onclick="window.location.href='/WList/SvuotaWList'" class="clear-wishlist" id="clear-wishlist">Svuota Wishlist</button>
            }
            else
            {
                <div>
                    <h2>La tua wishlist è vuota. Clicca qualche &#10084; per riempirla!</h2>
                </div>
            }
        </div>
    </div>

    <script src="~/js/Account/WList.js"></script>
</body>
</html>